<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.hidi2.UnlockVisitors">

    <RelativeLayout
        android:id="@+id/visitors_display_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/first_name"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <!--<de.hdodenhof.circleimageview.CircleImageView-->
                <!--android:id="@+id/hidi_image_one"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:layout_marginBottom="5dp"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--/>-->

            <TextView
                android:id="@+id/hidi_name_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/first_name">

            <!--<de.hdodenhof.circleimageview.CircleImageView-->
                <!--android:id="@+id/hidi_image_two"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:layout_marginBottom="5dp"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--/>-->

            <TextView
                android:id="@+id/hidi_name_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/second_name">

            <!--<de.hdodenhof.circleimageview.CircleImageView-->
                <!--android:id="@+id/hidi_image_three"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:layout_marginBottom="5dp"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--/>-->

            <TextView
                android:id="@+id/hidi_name_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        <!--android:layout_below="@+id/visitors_display_layout"-->
        <TextView
            android:id="@+id/text_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="190dp"
            android:gravity="center"
            android:text="Users recently visited to your profile"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_add2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_add"
            android:gravity="center"
            android:text="Watch ad to unlock them"
            android:textColor="#000"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/lock_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_add2"
            android:gravity="center">

            <ImageButton
                android:id="@+id/lock_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_lock_black_24dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lock_layout"
            android:gravity="center">

            <Button
                android:id="@+id/show_unlocked_visitors"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/cornr_round"
                android:text="SHOW UNLOCKED VISITORS"
                android:textColor="#42a5f5" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
