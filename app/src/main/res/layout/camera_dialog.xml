<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linearlayoutgallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095">

        <Button
            android:id="@+id/gallery"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="11.9"
            android:text="Gallery"
            android:textAlignment="viewEnd"
            android:textAllCaps="false"
            android:textColor="#000" />

        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/gallery_img"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_image_black_24dp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#34000000"
        android:layout_below="@+id/linearlayoutgallery">

    </View>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#34000000"
        android:layout_below="@+id/linearlayoutcamera"
        android:id="@+id/view">

    </View>

    <LinearLayout
        android:id="@+id/linearlayoutcamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/camera"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="11.9"
            android:text="Camera"
            android:textAlignment="viewEnd"
            android:textAllCaps="false"
            android:textColor="#000" />

        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/camera_img"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_camera_alt_black_24dp" />

    </LinearLayout>

</RelativeLayout>